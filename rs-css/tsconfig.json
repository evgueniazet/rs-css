{
  "types": ["node"],
  "typeRoots": ["../node_modules/@types"],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules"],
  "rootDir": "src"
}
